    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}/test",
            "program": "${workspaceFolder}/test/build/run.exe",
            "args": [
                // "--log",
                // "--filter=\\*.\\*",
                // "-h",
            ],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "gdb"
        }
    ]
}